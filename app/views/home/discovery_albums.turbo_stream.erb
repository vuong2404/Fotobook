<%= turbo_stream.append "discovery-albums" do %>
  <% @albums.each do |album| %>
    <%= render partial: "home/album_item", locals: {album: album} %>
  <% end %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.replace "pagination" do %>
    <%= turbo_frame_tag "pagination", src: discovery_albums_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>