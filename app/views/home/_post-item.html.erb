<div class="row list-posts g-2">
	<% posts.each do |post| %>
		<div class="card col col-12 col-md-6 post-item p-2 border-0">
			<div class="row g-0 border rounded shadow">
        <div class="col-md-6 position-relative post-image-container" data-bs-toggle="modal"
            data-bs-target="#exampleModal">
            <% if post.is_a? Photo%>
              <%= image_tag post.image , class: "img-fluid rounded-start post-image" %>
            <% else %>
              <% post.photos.each do |photo| %>
                <%= image_tag photo.image , class: "img-fluid rounded-start post-image" %>
              <% end %>
            <% end %>
        </div>
        <div class="col-md-6">
          <div class="card-body d-flex flex-column h-100">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%=post.description %></p>
            <div class="d-flex justify-content-between mt-auto align-items-center">
              <div class="d-flex align-items-center">
                <i class="fa-regular fa-heart me-1"></i>
                <i class="fa-solid fa-heart d-none me-2"></i>
                <span class="card-text m-0">233</span>
              </div>
              <p class="card-text"><small class="text-muted">4:56 12/6/2023</small></p>
            </div>
          </div>
        </div>
			</div>
		</div>
	<% end %>
</div>