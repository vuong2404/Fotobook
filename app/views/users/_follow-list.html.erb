<div class="contanter-fluid">
  <div class='row'> 
    <% follows.each do |user| %>
      <div class = "card col-md-3 text-center border-0">
        <div class="bg-light py-4 px-2 my-3 border border-warning rounded shadow" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <%= link_to image_tag(user.avatar, class: "w-50 rounded-circle border border-2 border-primary" ), profile_path(user.id)%>
          <p class='my-2 fw-bold'> <%= user.fname + " " + user.lname %> </p>
          <div class="d-flex justify-content-center my-2">
            <div class="mx-2">
                <p class="fs-3 text-primary fw-bold my-0"><%= user.photos.size %></p>
                <span class="fs-5 text-dark">Photos</span>
            </div>
            <div class="mx-2">
                <p class="fs-3 text-primary fw-bold my-0"><%= user.albums.size %></p>
                <span class="fs-5 text-dark">albums</span>
            </div>
          </div>
          <%= render partial: "shared/follow_button", locals: {user: user} %>
        </div>
      </div>
    <% end %>
  </div>
</div>