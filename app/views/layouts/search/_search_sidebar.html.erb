<% path = URI.parse(request.original_url).path.split('/').reject(&:empty?)  %>
<h5 class="fw-bold my-4 px-2 mx-3">Kết quả tìm kiếm</h5>
<ul class="my-0 w-auto text-decoration-none px-3"> 
  <li class="<%= "d-flex align-items-center rounded bg-light-hover #{"bg-light" if path.include?("all")}" %>" >
    <%= link_to search_path(key: request.params[:key]), class:"w-100 h-100 px-3 py-2 fs-5 text-decoration-none text-dark  text-start" do %>
      <i class="fa-regular fa-circle-user fs-5 me-2"></i>
      <span>All</span>
    <% end %>
  </li>
  <li class="<%= "d-flex align-items-center rounded bg-light-hover #{"bg-light" if path.include?("users")}" %>" >
    <%= link_to search_users_path(key: request.params[:key]), class:"w-100 h-100 px-3 py-2 fs-5 text-decoration-none text-dark text-start " do %>
      <i class="fa-regular fa-circle-user fs-5 me-2"></i>
      <span>People</span>
    <% end %>
  </li>
  
  <li class="<%= "d-flex align-items-center rounded bg-light-hover #{"bg-light" if path.include?("albums")}" %>" >
    <%= link_to search_albums_path(key: request.params[:key]), class:"w-100 h-100 px-3 py-2 fs-5 text-decoration-none text-dark text-start" do %>
      <i class="fa-regular fa-image me-2  fs-5"></i>
      <span>Albums</span>
    <% end %>
  </li>
  
  <li class="<%= "d-flex align-items-center rounded bg-light-hover #{"bg-light" if path.include?("photos")}" %>" >
    <%= link_to search_photos_path(key: request.params[:key]), class:"w-100 h-100 px-3 py-2 fs-5 text-decoration-none text-dark  text-start " do %>
      <i class="fa-regular fa-images me-2 fs-5"></i>
      <span>Photos</span>
    <% end %>
  </li>
</ul>
     
