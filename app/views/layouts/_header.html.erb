<div class="bg-primary py-1 d-flex justify-content-center px-0 px-md-3" id="header">
  <header class="header container py-2 d-flex align-items-center mx-0 mx-md-2 px-0">
    <%= link_to "Fotobook", root_path, class: "text-white h2 m-0 me-3 fw-bold text-decoration-none" %>
    <%= form_tag search_path, method: :get, class: "form-group search-form" do %>
      <div class="input-group w-0 position-relative px-2 d-none d-md-flex">
        <%= text_field_tag :key, "" , class: "form-control search-form__text--input w-auto rounded", placeholder: "Search for photos/albums..." %>
        <button class="input-icon-right btn btn-light cursor-pointer rounded">
          <i class="fa-solid fa-magnifying-glass text-dark"></i>
        </button>
      </div>
    <% end %>
    <span class="input-icon-right ms-2 cursor-pointer d-flex d-md-none rounded-circle align-items-center p-2">
      <i class="fa-solid fa-magnifying-glass text-white "></i>
    </span>
    
    <% if current_user %>
        <%= render "notifications/notifications", notifications: @notifications %>
        <%= link_to(profile_path(current_user), class: 'btn user-info d-flex align-items-center text-white text-decoration-none') do %>
            <%= image_tag(current_user.avatar, class: "user-info__avatar rounded-circle border") if current_user.avatar.attached? %>
            <span class="ms-2 text-nowrap"><%= current_user.fname + " " + current_user.lname %></span>
        <% end %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-success text-white ms-4 d-none d-md-block" %>
    <% else %>
        <%= link_to('Login', new_user_session_path, class: "ms-auto btn btn-light ms-4") %>
    <% end %>      
  </header>
</div>