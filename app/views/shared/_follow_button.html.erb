<% if current_user %>
  <%= turbo_frame_tag "follow_user#{user.id}", class: "follow_user#{user.id}" do %>
    <% if current_user.follow?(user.id) %>
      <%= button_to "Following", unfollow_user_path(user.id), method: :delete, class: "btn btn-following mini" %> 
    <%else %> 
      <%= button_to "Follow", follow_user_path(user.id), method: :post, class: "btn btn-follow mini" %> 
    <%end %>
  <%end %>
<%else %>
  <%= link_to "Follow", user_session_path, class: "btn btn-following my-3" %> 
<% end %>